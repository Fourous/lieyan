<view class="container">
  <view class="login-icon">
    <image class="login-img" src="../../image/swiper3.png" style=''></image>
  </view>
  <view class="login-from">

    <!--账号-->
    <view class="inputView">
      <!-- <image class="nameImage" src="../images/username.png"></image> -->
      <!-- <label class="loginLab">账号</label> -->
      <!-- <view class="line1"></view> -->
      <input class="inputText" placeholder="请输入账号" bindinput="usernameInput" />
    </view>
    <!-- <view class="line"></view> -->
    <!--密码-->
    <view class="inputView">
      <!-- <image class="keyImage" src="../images/password.png"></image> -->
      <!-- <label class="loginLab">密码</label> -->
      <!-- <view class="line1"></view> -->
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />
    </view>

    <!--按钮-->
    <view class="loginBtnView">
      <text class="registerBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="register">注册</text>
      <text class="forgetBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="forget">忘记密码</text>
      <button class="loginBtn"   bindtap="login">登录</button>
      <button class="we_loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="we_login">微信登录</button>

    </view>
  </view>
</view>